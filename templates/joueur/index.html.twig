{% extends 'base.html.twig' %}

{% block title %}Joueur index{% endblock %}

{% block body %}
    <h1>Joueur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NbMax</th>
                <th>Poste</th>
                <th>Cout</th>
                <th>CompMvmt</th>
                <th>CompForce</th>
                <th>CompAgilite</th>
                <th>CompPasse</th>
                <th>CompArmure</th>
                <th>Principale</th>
                <th>Secondaire</th>
                <th>Comp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for joueur in joueurs %}
            <tr>
                <td>{{ joueur.id }}</td>
                <td>{{ joueur.nbMax }}</td>
                <td>{{ joueur.poste }}</td>
                <td>{{ joueur.cout }}</td>
                <td>{{ joueur.compMvmt }}</td>
                <td>{{ joueur.compForce }}</td>
                <td>{{ joueur.compAgilite }}</td>
                <td>{{ joueur.compPasse }}</td>
                <td>{{ joueur.compArmure }}</td>
                <td>{{ joueur.principale }}</td>
                <td>{{ joueur.secondaire }}</td>
                <td>{{ joueur.comp }}</td>
                <td>
                    <a href="{{ path('app_joueur_show', {'id': joueur.id}) }}">show</a>
                    <a href="{{ path('app_joueur_edit', {'id': joueur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_joueur_new') }}">Create new</a>
{% endblock %}
