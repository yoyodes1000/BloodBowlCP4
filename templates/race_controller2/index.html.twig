{% extends 'base.html.twig' %}

{% block title %}Race index{% endblock %}

{% block body %}
    <h1>Race index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Relance</th>
                <th>Apothicaire</th>
                <th>Tresorerie</th>
                <th>Cheerleader</th>
                <th>Assistant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for race in races %}
            <tr>
                <td>{{ race.id }}</td>
                <td>{{ race.nom }}</td>
                <td>{{ race.relance }}</td>
                <td>{{ race.apothicaire }}</td>
                <td>{{ race.tresorerie }}</td>
                <td>{{ race.cheerleader }}</td>
                <td>{{ race.assistant }}</td>
                <td>
                    <a href="{{ path('app_race_controller2_show', {'id': race.id}) }}">show</a>
                    <a href="{{ path('app_race_controller2_edit', {'id': race.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_race_controller2_new') }}">Create new</a>
{% endblock %}
